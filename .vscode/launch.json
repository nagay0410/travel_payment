{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "API (dotnet run)",
			"type": "coreclr",
			"request": "launch",
			"program": "dotnet",
			"args": [
				"run",
				"--project",
				"src/API/API.csproj",
				"--urls",
				"http://0.0.0.0:5000"
			],
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"stopAtEntry": false,
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			}
		},
		{
			"name": "Attach to .NET Core",
			"type": "coreclr",
			"request": "attach"
		},
		{
			"name": "Client (Angular)",
			"type": "msedge",
			"request": "launch",
			"preLaunchTask": "serve-web",
			"url": "http://localhost:4200",
			"webRoot": "${workspaceFolder}/src/Web",
			"sourceMaps": true,
			"sourceMapPathOverrides": {
				"webpack:/*": "${webRoot}/*",
				"/./*": "${webRoot}/*",
				"/src/*": "${webRoot}/*",
				"/*": "*",
				"/./~/*": "${webRoot}/node_modules/*"
			}
		}
	],
	"compounds": [
		{
			"name": "Full Stack",
			"configurations": [
				"API (dotnet run)",
				"Client (Angular)"
			],
			"stopAll": true
		}
	]
}
